<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="1">
    
        <record id="pdsl_fetchmail_support_confirm_email_template" model="email.template">
            <field name="name">Confirm support</field>
            <field name="email_from"><![CDATA[${object.company_id.name} <${object.company_id.email|safe}>]]></field>
            <field name="subject">Confirm ${object.name} [ref. ${object.id}]</field>
            <field name="email_to">${object.email_from|safe}</field>
            <field name="lang">${ctx.get('lang') or object.partner_id.lang}</field>
            <field name="model_id" search="[('model','=','crm.helpdesk')]" model="ir.model"/>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[

<p>We have received your request and we will respond as quickly as possible.<p>

<p>We usually try to respond to requests for assistance within 48 hours, Monday to Friday.</p>

<p>Request ID: ${object.id}</p>

<p>Thank you,<br>
Patrik Dufresne Service Logiciel inc.</p>

<p>--</p>
<p>Original message received:</p>

<pre>
${object.description or ''}
</pre>]]></field>
        </record>
    
    </data>
	<data>

		<!-- Support categories -->
		<record model="crm.case.categ" id="project_categ_support">
			<field name="name">support</field>
            <field name="object_id" search="[('model','=','crm.lead')]" model="ir.model"/>
		</record>

        <!-- Send confirmation mail when creating new support request (helpdesk). -->
        <record id="filter_support_received_by_mail" model="ir.filters">
            <field name="name">Support request (helpdesk) received by mail</field>
            <field name="model_id">crm.helpdesk</field>
            <field name="domain">[('email_from','!=','')]</field>
            <field name="user_id" eval="False"/>
        </record>
        <record id="action_send_support_confirm" model="ir.actions.server">
            <field name="name">Send support confirmation mail</field>
            <field name="model_id" ref="crm_helpdesk.model_crm_helpdesk"/>
            <field name="condition">True</field>
            <field name="type">ir.actions.server</field>
            <field name="state">email</field>
            <field name="template_id" ref="pdsl_fetchmail_support_confirm_email_template"/>
        </record>
        <record id="rule_send_support_confirm" model="base.action.rule">
            <field name="name">Send confirm mail for support request (helpdesk).</field>
            <field name="model_id" ref="crm_helpdesk.model_crm_helpdesk"/>
            <field name="sequence">2</field>
            <field name="kind">on_create</field>
            <field name="filter_id" ref="filter_support_received_by_mail"/>
            <field name="act_user_id" ref="base.user_root"/>
            <field name="server_action_ids" eval="[(6,0,[ref('action_send_support_confirm')])]"/>
        </record>

	</data>
</openerp>
